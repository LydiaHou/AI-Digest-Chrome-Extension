{
  "manifest_version": 3,
  "name": "Vibe Video & Podcast Summarizer",
  "version": "1.0.0",
  "description": "快速生成 YouTube 影片摘要",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vibe Summarizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
