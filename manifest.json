{
  "manifest_version": 3,
  "name": "Vibe Video & Podcast Summarizer",
  "version": "1.0.0",
  "description": "Automatically summarize YouTube videos and podcast episodes using AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.spotify.com/*",
    "https://*.apple.com/*",
    "https://*.googleapis.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://*.spotify.com/*",
        "https://*.apple.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vibe Summarizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
